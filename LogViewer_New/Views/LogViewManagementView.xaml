        <Border
            Padding="10"
            DockPanel.Dock="Top">
            <StackPanel
                DockPanel.Dock="Top"
                Orientation="Vertical">
                <StackPanel
                    Margin="0,0,0,5"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        FontSize="20"
                        Text="Files" />
                    <Button
                        Width="20"
                        Height="20"
                        VerticalAlignment="Center"
                        Command="{Binding OpenOpenLogFileViewCommand}"
                        Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                        ToolTip="Add a log file">
                        <iconPacks:PackIconModern
                            Width="10"
                            Height="10"
                            Kind="Add" />
                    </Button>
                </StackPanel>
                <ListBox
                    ItemsSource="{Binding LogFiles}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                ContextMenu="{StaticResource ContextMenu}"
                                Text="{Binding NetworkFile.Name}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding NetworkFile.FullName}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        FontSize="20"
                        Text="Databases" />
                    <Button
                        Width="20"
                        Height="20"
                        Command="{Binding OpenOpenDatabaseViewCommand}"
                        Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                        ToolTip="Add a database">
                        <iconPacks:PackIconModern
                            Width="10"
                            Height="10"
                            Kind="Add" />
                    </Button>
                </StackPanel>
                <ListBox
                    ItemsSource="{Binding Databases}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                ContextMenu="{StaticResource ContextMenu}"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </DockPanel>
</UserControl>
